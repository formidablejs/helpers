{
  "name": "@formidablejs/helpers",
  "version": "0.0.1-rc1",
  "description": "Helper functions for Formidable",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "imbac src --output=lib --platform=node --clean && tsc",
    "imba:build": "imbac src --output=lib --platform=node --clean",
    "imba:watch": "imbac -w src --output=lib --platform=node --clean",
    "ts:build": "tsc",
    "ts:watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:ci": "jest --ci --runInBand --coverage",
    "make-badges": "istanbul-badges-readme",
    "commit": "npm run test:cov && npm run make-badges && git add 'README.md'"
  },
  "author": "Donald Pakkies <donaldpakkies@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^10.0.0",
    "istanbul-badges-readme": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "husky": "^7.0.1",
    "imba": "^2.0.0-alpha.165",
    "jest": "^27.0.6",
    "typescript": "^4.3.5"
  },
  "jest": {
    "coverageReporters": [
      "json-summary"
    ]
  }
}
